{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task Schema",
    "type": "object",
    "properties": {
      "completed": {
        "type": "boolean",
        "description": "Indicates whether the task is completed."
      },
      "created": {
        "type": "string",
        "format": "date-time",
        "description": "The timestamp indicating when the task was created."
      },
      "details": {
        "type": "string",
        "description": "A description of the task."
      },
      "title": {
        "type": "string",
        "description": "The title of the task."
      },
      "user": {
        "type": "string",
        "pattern": "^/users/[a-zA-Z0-9_-]+$",
        "description": "A reference to the user document associated with the task."
      }
    },
    "required": [
      "completed",
      "created",
      "details",
      "title",
      "user"
    ]
  }
  