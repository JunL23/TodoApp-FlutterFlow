{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Schema",
    "type": "object",
    "properties": {
      "birthday": {
        "type": "string",
        "format": "date-time",
        "description": "The user's birthday as a timestamp in ISO 8601 format."
      },
      "created_time": {
        "type": "string",
        "format": "date-time",
        "description": "The timestamp indicating when the user document was created."
      },
      "display_name": {
        "type": "string",
        "description": "The name displayed for the user."
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "The user's email address."
      },
      "hometown": {
        "type": "string",
        "description": "The hometown of the user."
      },
      "photo_url": {
        "type": "string",
        "format": "uri",
        "description": "A URL linking to the user's profile photo."
      },
      "uid": {
        "type": "string",
        "description": "A unique identifier for the user."
      }
    },
    "required": [
      "birthday",
      "created_time",
      "display_name",
      "email",
      "hometown",
      "photo_url",
      "uid"
    ]
  }
  